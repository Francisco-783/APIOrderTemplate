generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}
model AddItem {
  id     Int     @id @default(autoincrement())
  name   String
  value  Float
  price  Float
  order  Order   @relation(fields: [orderId], references: [id])
  orderId Int
}

model Order {
  id          Int        @id @default(autoincrement())
  name        String
  image       String
  description String
  visible     Boolean
  addItems    AddItem[]
}


