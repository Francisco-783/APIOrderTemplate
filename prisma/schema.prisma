generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}
model AddItem { //aditives to a order, extra fries or extra meat
  id          Int     @id @default(autoincrement())
  name        String
  limit       Float
  price       Float
  order       Order?   @relation(fields: [orderId], references: [id], onDelete: SetNull)
  orderId     Int?
}

model ClientRequest {
  id          Int         @id @default(autoincrement())
  createdAt   DateTime    @default(now())
  status      RequestStatus @default(PENDING)
  clientId    Int
  promos      Promo[]     @relation("ClientRequestPromos")
  orders      Order[]     @relation("ClientRequestOrders")
  extras      Extra[]     @relation("ClientRequestExtras")
}

enum RequestStatus {
  PENDING
  IN_PROGRESS
  REJECTED
  COMPLETED
}

model Promo {
  id              Int              @id @default(autoincrement())
  name            String
  image           String
  visible         Boolean
  price           Int
  orders          Order[]          @relation("PromoOrders")
  extras          Extra[]          @relation("PromoExtras")
  clientRequests  ClientRequest[]  @relation("ClientRequestPromos")
}

model Order {
  id              Int              @id @default(autoincrement())
  name            String
  image           String
  description     String
  visible         Boolean
  price           Int
  promos          Promo[]          @relation("PromoOrders")
  addItems        AddItem[]
  clientRequests  ClientRequest[]  @relation("ClientRequestOrders")
}

model Extra {
  id              Int              @id @default(autoincrement())
  name            String
  image           String
  visible         Boolean
  price           Int
  promos          Promo[]          @relation("PromoExtras")
  clientRequests  ClientRequest[]  @relation("ClientRequestExtras")
}


model Admin {
  id          String   @id @default(uuid())
  name        String
  password    String
  createdAt   DateTime @default(now())
}